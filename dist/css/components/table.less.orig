.table-bordered {
  border: @table-border;
  & {
    >tbody,
    >thead,
    >tfoot {
      >tr {
        >td,
        >th {
          border: @table-border;
        }
      }
    }
  }
}

.table-bordered-row {
  border: @table-border;
  >tbody,
  >thead,
  >tfoot {
    >tr {
      >td,
      >th {
        border-bottom: @table-border;
      }
    }
  }
}

.table-bordered-col {
  border: @table-border;
  >tbody,
  >thead,
  >tfoot {
    >tr {
      >td,
      >th {
        border: none;
        border-right: @table-border;
        &:last-child {
          border: none;
        }
      }
    }
  }
}

.table-condensed {
  >tbody,
  >thead,
  >tfoot {
    >tr {
      >td,
      >th {
        padding: @table-condensed;
        font-size: @table-condensed-fs;
      }
    }
  }
}

.table-striped {
  >tbody {
    >tr {
      &:nth-of-type(odd) {
        background-color: @table-striped;
      }
    }
  }
}

.table-hover {
  >tbody {
    >tr {
      &:hover {
        background-color: @table-hover;
      }
    }
  }
}